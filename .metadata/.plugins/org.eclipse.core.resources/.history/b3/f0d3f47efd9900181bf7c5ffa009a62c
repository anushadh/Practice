package problems.algorithms;

import java.util.HashMap;

public class LongestSubstring {

	public int lengthOfLongestSubstring(String s) {
		HashMap<Character, Integer> hm = new HashMap();
		int length = 0;
		for(int i = 0; i < s.length(); i++) {
			char c = s.charAt(i);
			if(hm.containsKey(c)) {
				length = 0;
				hm.clear();
				continue;
			}
			length++;
			hm.put(c, i);
		}
	}

}
