package problems.algorithms;

public class AddDigits {

	public static void main(String[] args) {
		AddDigits ad = new AddDigits();
		int num = 38;
		System.out.println(ad.addDigits(num));;
	}

	public int addDigits(int num) {
		if(num < 10) {
			return num;
		}
		int sum = 0;
		int rem = 0;
		while(num > 0) {
			System.out.println(num);
			rem = num%10;
			num = num/10;
			sum = sum + num;
			if(num == 0) {
				num = sum;
				break;
			} else {
			}
		}
		return sum;
	}
}
