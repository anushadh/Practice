package problems.algorithms;

public class PowerOfThree {

	public static void main(String[] args) {
		PowerOfThree pt = new PowerOfThree();
		int n = 0;
		System.out.println(pt.isPowerOfThree(n));;
	}
	
	O(//Log n base 3)
	public boolean isPowerOfThree(int n) {
		if(n < 1) {
			return false;
		}
		if(n == 1) {
			return true;
		}
		while(n%3 == 0) {
			n /= 3;
		}
		return (n == 1);
		/*int rem = 0;
		while(n != 1) {
			rem = n%3;
			if(rem != 0) {
				return false;
			}
			n = n/3;
		}*/
		
	}
}
