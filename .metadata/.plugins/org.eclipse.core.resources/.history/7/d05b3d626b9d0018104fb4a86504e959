	public boolean isAnagram(String s, String t) {
		if(s.length() != t.length()) {
			return false;
		}
        char[] sArray = s.toCharArray();
        char[] tArray = t.toCharArray();
        Arrays.sort(sArray);
        Arrays.sort(tArray);
        int i = 0;
        while(i < s.length()) {
        	if(sArray[i] != tArray[i]) {
        		return false;
        	}
        	i++;
        }
		return true;
    }
	
	
}
