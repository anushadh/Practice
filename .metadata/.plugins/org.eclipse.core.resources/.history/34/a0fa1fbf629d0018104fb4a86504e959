package problems.algorithms;

public class PowerofTwo {

	public static void main(String[] args) {
		PowerofTwo pt = new PowerofTwo();
		int n = 9;
		System.out.println(pt.isPowerOfTwo(n));
	}
	
    public boolean isPowerOfTwo(int n) {
    	int rem = 0;
    	if(n == 1) {
    		return true;
    	}
    	while(n != 1) {
    		rem = n%2;
    		n = n/2;
    		if(rem != 0) {
    			return false;
    		}
    	}
    	
    	return true;
    }
}
