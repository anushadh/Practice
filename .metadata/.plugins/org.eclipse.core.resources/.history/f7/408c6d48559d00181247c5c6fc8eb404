package problems.algorithms;

public class AddDigits {

	public static void main(String[] args) {
		AddDigits ad = new AddDigits();
		int num = 38;
		System.out.println(ad.addDigits(num));;
	}

	public int addDigits(int num) {
		if(num < 10) {
			return num;
		}
		int sum = 0;
		int rem = 0;
		while(num > 0) {
			rem = num%10;
			if(!(num < 9)) {
				num = num/10;
			}
			if(rem == 0) {
				sum = rem + num;
				num = sum;
			} else {
				sum = sum + rem;
			}
		}
		return sum;
	}
}
